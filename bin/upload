if [[ $# -lt 2 ]] ; then
    echo 'enter profile, src, [dest]'
    exit 0
fi

source profiles/$1

if [ -z "$3" ]
then
    dest=$(basename $2)
else
    dest=$3
fi

scp -i $EC2_KEY_PAIR_PATH $2 hadoop@$(aws emr describe-cluster --cluster-id `cat "$1_cluster.id"` --region=$AWS_REGION | grep MasterPublicDns | cut -d':' -f2 | tr -d ' ",'):"works/$dest"
